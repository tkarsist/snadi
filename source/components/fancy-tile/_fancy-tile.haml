          %li{:class =>['fancy-tile', 'box']}
            %a{:href =>s.fancy_tile.link || "#",:class=>"fancybox",:rel=>fancy_tiles.group, :title =>s.fancy_tile.title}
              %img{:src =>s.fancy_tile.img, :alt=>s.fancy_tile.title}      
      .footer

